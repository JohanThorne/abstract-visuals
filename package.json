    "@types/jest": "^22.1.1",
    "@types/mocha": "^2.2.48",
    "@types/node": "^14.14.35",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "jest": "^22.2.0",
    "lerna": "^2.8.0",
    "lint-staged": "^6.1.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
