    "webpack-dev-server": "^2.11.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "publish-npm": "yarn verify && lerna publish",
    "verify": "lerna run lint && lerna run build && lerna run circular && lerna run test && lerna run coverage",
    "updated": "lerna updated",
    "lint": "tslint -t msbuild './packages/*/{src,test}/**/*.ts{,x}'",
    "test": "lerna run test",
    "clean": "tsc -b packages --clean && rm -rf packages/*/lib",
    "build": "tsc -b packages"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint",
    "*.{ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
