{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/dividab/abstract-visuals",
  "devDependencies": {
    "@storybook/react": "^3.3.12",
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "chai": "^4.1.2",
    "confusing-browser-globals": "^1.0.10",
    "eslint": "^7.22.0",
    "eslint-config-divid": "^0.5.1",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^0.14.3",
    "jest": "^26.6.3",
    "lerna": "^2.8.0",
    "lint-staged": "^6.1.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^3.4.0",
    "ts-node": "^4.1.0",
    "typescript": "^4.2.3",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "publish-npm": "run-s verify && lerna publish",
    "verify": "run-s lint build test",
    "updated": "lerna updated",
    "test": "run-s test:abstract-document",
    "test:abstract-chart": "cd packages/abstract-chart && rm -rf test/lib && mocha --colors",
    "test:abstract-document": "cd packages/abstract-document && rm -rf test/lib && mocha --colors",
    "test:abstract-image": "cd packages/abstract-image && rm -rf test/lib && mocha --colors",
    "test2": "jest",
    "lint": "eslint './packages/*/src/**/*.ts{,x}' --ext .js,.ts,.tsx -f visualstudio",
    "clean": "tsc -b packages --clean && rm -rf packages/*/lib",
    "build": "tsc -b packages"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --ext .ts,.tsx -f visualstudio",
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
